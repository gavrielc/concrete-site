---
export interface Props {
	title: string;
	subTitle: string;
}

const { title, subTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={subTitle}>
		<meta property="og:description" content={subTitle}>
		<meta property="og:title" content={title}>
		<meta property="og:image" content="https://concrete.media/social1.png">
		<meta property="og:site_name" content="Concrete Media">
		<title>{title}</title>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-X678N0MN5C"></script>
		<script is:inline>
			// @ts-nocheck
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-X678N0MN5C');
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global is:inline>
