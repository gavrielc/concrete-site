	}

	@font-face {
	font-family: 'Inter';
	font-style: normal;
	font-weight: 500;
	font-display: swap;
	src: url(https://fonts.gstatic.com/s/inter/v13/UcC73FwrK3iLTeHuS_fvQtMwCp50KnMa1ZL7W0Q5nw.woff2) format('woff2');
	unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	@font-face {
	font-family: 'Inter';
	font-style: normal;
	font-weight: 600;
	font-display: swap;
	src: url(https://fonts.gstatic.com/s/inter/v13/UcC73FwrK3iLTeHuS_fvQtMwCp50KnMa1ZL7W0Q5nw.woff2) format('woff2');
	unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	@font-face {
	font-family: 'Outfit';
	font-style: normal;
	font-weight: 600;
	font-display: swap;
	src: url(https://fonts.gstatic.com/s/outfit/v11/QGYyz_MVcBeNP4NjuGObqx1XmO1I4e6yO4a0EwItq6fNIg.woff2) format('woff2');
	unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	body {
		margin: 0;
	}

	body:has(.mobile-open) {
		overflow: hidden;
	}

	* {
		box-sizing: border-box;
	}

	h2 {
		font-weight: 600;
		font-size: 64px;
		color: white;
		font-family: 'Outfit';
		line-height: 115%;
	}

	h3 {
		font-family: 'Outfit';
		font-weight: 600;
		font-size: 48px;
		line-height: 115%;
		letter-spacing: -0.01em;
		color: #7022FB;
	}

	ul {
		margin: 0;
		padding: 0;
	}

	section {
		display: flex;
		padding: 84px max(calc((100vw - 1216px)/2), 48px);
		align-items: center;
		width: 100vw;
	}

	.desc-text {
		font-family: 'Inter';
		font-size: 24px;
		line-height: 145%;
		color: rgba(0, 0, 0, 0.6);
	}

	@media screen and (max-width: 1400px) {
		h2 {
			font-size: 48px;
		}
	}

	@media screen and (max-width: 1050px) {
		h3 {
			font-size: 32px;
		}

		h2 {
			font-size: 24px;
		}

		section {
			padding: 32px 16px;
		}

		.desc-text {
			font-size: 20px;
		}
	}
</style>
