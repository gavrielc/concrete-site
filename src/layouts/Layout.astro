---
export interface Props {
	title: string;
}

import social from '../assets/social-share.jpg';
import {GoogleAnalytics} from 'astro-analytics';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="noindex" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit&family=Inter">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="The most dynamic B2B tech companies turn to Concrete to promote them globally. ">
		<meta property="og:description" content="The most dynamic B2B tech companies turn to Concrete to promote them globally. ">
		<meta property="og:title" content={title}>
		<meta property="og:image" content={social}>
		<meta property="og:site_name" content="Concrete Media">
		<title>{title}</title>
		<GoogleAnalytics id='G-X678N0MN5C'/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		margin: 0;
	}

	* {
		box-sizing: border-box;
	}

	h2 {
		font-weight: 600;
		font-size: 64px;
		color: white;
		font-family: 'Outfit';
		line-height: 115%;
	}

	h3 {
		font-family: 'Outfit';
		font-weight: 600;
		font-size: 48px;
		line-height: 115%;
		letter-spacing: -0.01em;
		color: #7022FB;
	}

	ul {
		margin: 0;
		padding: 0;
	}

	section {
		display: flex;
		padding: 84px 112px;
		align-items: center;
		width: 100vw;
	}

	.desc-text {
		font-family: 'Inter';
		font-size: 24px;
		line-height: 145%;
		color: rgba(0, 0, 0, 0.6);
	}

	@media screen and (max-width: 1400px) {
		h2 {
			font-size: 48px;
		}
	}

	@media screen and (min-width: 1800px) {
		section {
			padding: 84px 356px;
		}
	}

	@media screen and (max-width: 1050px) {
		h2, h3 {
			font-size: 32px;
		}

		section {
			padding: 84px 16px;
		}
	}
</style>
