---
export interface Props {
	title: string;
}

import social from '../assets/social-share.png';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="noindex" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit&family=Inter">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="The most dynamic B2B tech companies turn to Concrete to promote them globally. ">
		<meta property="og:description" content="The most dynamic B2B tech companies turn to Concrete to promote them globally. ">
		<meta property="og:title" content={title}>
		<meta property="og:image" content={social}>
		<meta property="og:site_name" content="Concrete Media">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		margin: 0;
	}

	* {
		box-sizing: border-box;
	}
</style>
