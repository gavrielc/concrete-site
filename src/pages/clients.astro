---
import Footer from "../components/Footer.astro";
import Testimonials from "../components/Testimonials.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="Our clients | Public Relations for serious tech companies | concrete.media">
    <section class="header">
        <h3>The most dynamic B2B tech companies turn to Concrete to promote them globally.</h3>
        <p class="desc-text">We specialize in maximizing the coverage for your big announcements and in proactively creating continuous results between the big stories.</p>
    </section>
    <Testimonials />
    <Footer />
</Layout>

<style>
    .header {
        flex-direction: column;
        align-items: flex-start;
        max-width: 75%;
    }

    .header h3 {
        margin: 0;
    }

</style>