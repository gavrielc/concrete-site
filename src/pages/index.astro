		}

		:global(.result-card:nth-of-type(3)) {
			margin-left: 148px;
		}

		ul {
			margin-right: 64px;
		}

		.results-desc {
			max-width: 37vw;
			margin-left: auto;

			.desc-text {
				margin-bottom: 48px;
			}
		}



		.four {

			@media screen and (min-width: 1051px) {
				:global(h4) {
					white-space: nowrap;
					overflow: hidden;
					text-overflow: ellipsis;
				}
			}

			:global(.result-card:nth-of-type(2)) {
				margin-left: 49px;
			}

			:global(.result-card:nth-of-type(3)) {
				margin-left: 98px;
			}

			:global(.result-card:nth-of-type(4)) {
