	// 	const hero = document.querySelector('.hero');
	// 	if (e.key === 'ArrowRight') {
	// 		window.imgNumber = (window.imgNumber + 1) % 36;
	// 	} else if (e.key === 'ArrowLeft') {
	// 		window.imgNumber = (window.imgNumber - 1) % 36;
