---
export interface Props {
	logo: string;
	headline: string;
	date: string;
	articleUrl: string;
	publication: string;
}

const { logo, headline, date, articleUrl, publication } = Astro.props;
---

<div class="result-card">
	<a href={articleUrl} target="_blank">
		<img src={logo} alt={`${publication} logo`}/>
		<h4>{headline}</h4>
		<p>{date}</p>
	</a>
</div>
<style>
	.result-card {
		border: 1px solid rgba(255, 255, 255, 0.2);
		filter: drop-shadow(0px 4px 16px rgba(0, 0, 0, 0.12)) drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.12));
		border-radius: 16px;
		padding: 24px;
		background: white;
		width: 488px;
		margin-bottom: 30px;
	}

	a {
		text-decoration: none;
	}

	h4 {
		margin: 16px 0;
		font-family: 'Inter';
		font-weight: 500;
		font-size: 20px;
		line-height: 120%;
		letter-spacing: -0.019em;
		color: #171717;
	}

	p {
		margin: 0;
		font-family: 'Inter';
		font-size: 14px;
		line-height: 20px;
		letter-spacing: -0.006em;
		color: rgba(0, 0, 0, 0.6);
	}

	img {
		height: 30px;
	}
</style>
