---
export interface Props {
	inline?: boolean;
	class?: string;
}

const {inline = false, class: className} = Astro.props;

---
<header class:list={[inline ? 'inline' : 'regular', className]}>
	<a href="/">{inline ? <img class="inline-logo" src="/logo.svg" /> : <img class="logo" src="/concrete-media-logo.svg" />}</a>
	<a href="/">Home</a>
	<a href="/clients">Clients</a>
	<a href="#results">Work</a>
	<a href="#contact">Contact</a>
</header>
<style>
	header {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		width: 100vw;
		column-gap: 24px;
		margin-bottom: auto;
		padding: 32px 112px;
	}

	header.regular {
		background: white;
		position: sticky;
		top: 0;
	}

	.inline-logo {
		height: 65px;
	}

	.logo {
		height: 36px;
	}

	a:first-of-type {
		margin-right: auto;
	}

	a {
		font-family: 'Inter';
		font-weight: 500;
		text-decoration: none;
	}

	.regular a {
		color: rgba(0, 0, 0, 0.6);
	}

	.inline a {
		color: white;
	}



</style>
